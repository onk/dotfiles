[user]
  name = Takafumi ONAKA
  email = takafumi.onaka@gmail.com

[alias]
  a = add
  ap = add -p
  b = branch
  ba = branch -a
  bm = branch -a --merged
  bn = branch -a --no-merged
  cancel = !git add . && git commit -m 'Temporary commit for cancel' && git reset --hard HEAD~
  ch = cherry-pick
  ci = commit -v
  co = checkout
  d = diff -b
  dc = diff --cached -b
  f = fetch -p
  fix = commit -v --amend
  md = merge origin/develop --ff
  mm = merge origin/master --ff
  ph = push origin HEAD
  phf = push origin HEAD --force-with-lease
  r = rebase
  rc = rebase --continue
  re = reset HEAD~1
  ri = rebase -i
  rp = rebase -p
  s = status -sb
  sweep-branch-develop = !git branch --delete $(git branch --merged origin/develop | egrep -v '^(\\*| ) develop$')
  sweep-branch-master = !git branch --delete $(git branch --merged origin/master | egrep -v '^(\\*| ) master$')
  sq = push sqale sqale:master

[core]
  excludesfile = ~/.gitignore_global

[interactive]
  singlekey = true

[ghq]
  root = ~/src

[include]
  path = .gitconfig.local
